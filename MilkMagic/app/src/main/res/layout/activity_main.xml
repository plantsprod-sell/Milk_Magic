<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".MainActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="24dp">

            <ImageView
                android:id="@+id/btn_menu"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:src="@drawable/ic_menu"
                app:tint="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Daily Milk"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/btn_menu"
                app:layout_constraintStart_toEndOf="@id/btn_menu"
                app:layout_constraintTop_toTopOf="@id/btn_menu" />
            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:drawablePadding="4dp"
                android:text="Home"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                app:drawableEndCompat="@drawable/ic_location"
                app:drawableTint="@color/blue_gradient_end"
                app:layout_constraintBottom_toBottomOf="@id/tv_app_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_app_name" />

            <EditText
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_search_rounded"
                android:hint="Search Vendors"
                android:paddingHorizontal="16dp"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/tv_app_name" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_current_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:layout_constraintTop_toBottomOf="@id/et_search">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_gradient_card"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/viewpager_card"
                        android:layout_width="match_parent"
                        android:layout_height="140dp" />

                    <LinearLayout
                        android:id="@+id/dots_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:orientation="horizontal" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_quick_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:text="Quick Order"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_current_order" />

            <LinearLayout
                android:id="@+id/layout_quick_actions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="16dp"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:weightSum="3"
                app:layout_constraintTop_toBottomOf="@id/tv_quick_title">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="145dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    app:cardBackgroundColor="#E3F2FD"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/lottie_milk"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            app:lottie_rawRes="@raw/milk_fill"
                            app:lottie_autoPlay="false"
                            app:lottie_loop="false" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Milk"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:textStyle="bold"/>

                        <LinearLayout
                            android:id="@+id/layout_add_milk"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/bg_add_button"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true">

                            <TextView
                                android:id="@+id/btn_add_milk"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ADD"
                                android:textColor="#1976D2"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_counter_milk"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/bg_counter_rounded"
                            android:backgroundTint="#1976D2"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <ImageButton
                                android:id="@+id/btn_minus_milk"
                                android:layout_width="24dp"
                                android:layout_height="match_parent"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:src="@drawable/ic_leftarrow"
                                app:tint="@color/white" />

                            <TextView
                                android:id="@+id/tv_count_milk"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="1"
                                android:textColor="@color/white"
                                android:textStyle="bold" />

                            <ImageButton
                                android:id="@+id/btn_plus_milk"
                                android:layout_width="24dp"
                                android:layout_height="match_parent"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:src="@drawable/ic_plus"
                                app:tint="@color/white" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="145dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="3dp"
                    app:cardBackgroundColor="#E3F2FD"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/lottie_curd"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            app:lottie_rawRes="@raw/milk_fill"
                            app:lottie_autoPlay="false"
                            app:lottie_loop="false" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Curd"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:textStyle="bold"/>

                        <LinearLayout
                            android:id="@+id/layout_add_curd"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/bg_add_button"
                            android:gravity="center">
                            <TextView
                                android:id="@+id/btn_add_curd"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ADD"
                                android:textColor="#1976D2"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_counter_curd"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/bg_counter_rounded"
                            android:backgroundTint="#1976D2"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:visibility="gone">
                            <ImageButton
                                android:id="@+id/btn_minus_curd"
                                android:layout_width="24dp"
                                android:layout_height="match_parent"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:src="@drawable/ic_leftarrow"
                                app:tint="@color/white" />
                            <TextView
                                android:id="@+id/tv_count_curd"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="1"
                                android:textColor="@color/white"
                                android:textStyle="bold" />
                            <ImageButton
                                android:id="@+id/btn_plus_curd"
                                android:layout_width="24dp"
                                android:layout_height="match_parent"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:src="@drawable/ic_plus"
                                app:tint="@color/white" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="145dp"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    app:cardBackgroundColor="#FFF3E0"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:padding="10dp"
                            android:src="@drawable/ic_menu"
                            app:tint="#EF6C00"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Custom"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:textStyle="bold"/>

                        <LinearLayout
                            android:id="@+id/layout_add_custom"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/bg_add_button"
                            android:gravity="center">
                            <TextView
                                android:id="@+id/btn_add_custom"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ADD"
                                android:textColor="#E65100"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_counter_custom"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/bg_counter_rounded"
                            android:backgroundTint="#EF6C00"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:visibility="gone">
                            <ImageButton
                                android:id="@+id/btn_minus_custom"
                                android:layout_width="24dp"
                                android:layout_height="match_parent"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:src="@drawable/ic_leftarrow"
                                app:tint="@color/white" />
                            <TextView
                                android:id="@+id/tv_count_custom"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="1"
                                android:textColor="@color/white"
                                android:textStyle="bold" />
                            <ImageButton
                                android:id="@+id/btn_plus_custom"
                                android:layout_width="24dp"
                                android:layout_height="match_parent"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:src="@drawable/ic_plus"
                                app:tint="@color/white" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_history_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:text="Order History"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_quick_actions" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:layout_constraintTop_toBottomOf="@id/tv_history_title">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/img_hist"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_milk"
                        app:tint="@color/background_gray"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_hist_item"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="8dp"
                        android:text="Previous: 3L Cow Milk"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@id/tv_hist_sub"
                        app:layout_constraintEnd_toStartOf="@id/btn_repeat"
                        app:layout_constraintStart_toEndOf="@id/img_hist"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_chainStyle="packed" />

                    <TextView
                        android:id="@+id/tv_hist_sub"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="8dp"
                        android:text="Delivered Yesterday"
                        android:textColor="@color/background_gray"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/btn_repeat"
                        app:layout_constraintStart_toEndOf="@id/img_hist"
                        app:layout_constraintTop_toBottomOf="@id/tv_hist_item" />

                    <Button
                        android:id="@+id/btn_repeat"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Repeat"
                        android:textSize="10sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:elevation="8dp"
        app:menu="@menu/bottom_nav_menu"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>